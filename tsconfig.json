{
  "include": [
    "src", 
    "types"
  ],
  "exclude": [
    "src/*.web.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "dom", 
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "*": [
        "src/*", 
        "node_modules/*"
      ]
    },
    "jsx": "react",
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
